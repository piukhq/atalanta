    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug bin 'transactor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=transactor",
                    "--package=atalanta"
                ],
                "filter": {
                    "name": "transactor",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug bin 'distributor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=distributor",
                    "--package=atalanta"
                ],
                "filter": {
                    "name": "distributor",
                    "kind": "bin"
                }
            },
            "args": [
                "wasabi-club"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'atalanta'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=atalanta",
                    "--package=atalanta"
                ],
                "filter": {
                    "name": "atalanta",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example dynamic",
            "cargo": {
                "args": [
                    "build",
                    "--example=dynamic",
                    "--package=atalanta"
                ],
                "filter": {
                    "name": "dynamic",
                    "kind": "example"
                }
            },
            "args": [
                "wasabi",
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}